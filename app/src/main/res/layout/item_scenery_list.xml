<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/iv_video_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_img_defalt"
            android:layout_margin="10dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_icon_openvideo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_openvideo"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_scenery_tv_bigtitle"
                android:padding="@dimen/margin_10"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="波尔含山"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/srec_ve_add_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_list_viewnum"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/txt_12"
                    android:textColor="@color/white"
                    android:text="1231"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_scenery_tv_left_top"
                android:textSize="@dimen/txt_13"
                android:textColor="@color/text"
                android:text="景区承载量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/orange"
                    android:text="201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/txt_13"
                android:textColor="@color/text"
                android:text="景区承载量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/green"
                    android:text="201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/txt_13"
                android:textColor="@color/text"
                android:text="景区承载量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/icon_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/txt_10"
                    android:textColor="@color/text_gray"
                    android:text="℃"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/shape_blue_rectangle_line"
            android:text="看简介"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/include_space_10"/>

</LinearLayout>