<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/chat_margin_size"
    android:gravity="top|left"
    android:orientation="horizontal"
    android:padding="6dp">


    <ImageView
        android:id="@+id/item_robot_hello_iv_portrait"
        android:layout_width="@dimen/chat_headimg_size"
        android:layout_height="@dimen/chat_headimg_size"
        android:layout_marginRight="5dp"
        android:src="@mipmap/mine_head_default" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/item_robot_chat_tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_robot"
        android:text="kdfkkdfkdkkf"
        android:textColor="@color/text_gray" />
</LinearLayout>