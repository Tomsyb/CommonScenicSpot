<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/iv_video_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_img_defalt"
            android:layout_margin="10dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_icon_openvideo"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_openvideo"/>
        <TextView
            android:id="@+id/tv_mins"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="12dfe"
            android:textSize="@dimen/txt_11"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:paddingBottom="@dimen/margin_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="##"
            android:textColor="@color/text"/>
    </RelativeLayout>
    <include layout="@layout/include_space_10"/>

</LinearLayout>