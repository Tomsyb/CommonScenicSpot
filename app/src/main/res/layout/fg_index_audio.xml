<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tourism_products_voice_bg"
    android:orientation="vertical">
    <include layout="@layout/include_title_main"/>
    <ImageView
        android:id="@+id/iv_audio"
        android:layout_margin="100dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:padding="@dimen/margin_10"
        android:background="@drawable/shape_gray_radius"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_audio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12"
            android:ellipsize="end"
            android:drawablePadding="@dimen/padding_6"
            android:singleLine="true"
            android:drawableLeft="@mipmap/tourism_products_voice_icon"/>


        <LinearLayout
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_10"
                android:layout_marginRight="@dimen/padding_6"/>
            <SeekBar
                android:id="@+id/bar_audio_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:maxHeight="1dp"
                android:thumb="@mipmap/tourism_products_slider"
                android:progressDrawable="@drawable/bg_bar"
                />
            <TextView
                android:id="@+id/tv_audio_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_10"
                android:layout_marginLeft="@dimen/padding_6"/>

        </LinearLayout>



        <ImageView
            android:id="@+id/iv_audio_play"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/tourism_products_suspended_button"/>


    </LinearLayout>

</LinearLayout>