<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/index_sw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/tab_index_top_scroview"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="地震智能仪器运维平台"
                    android:background="@color/main"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.youth.banner.Banner
                        android:id="@+id/index_top_banner"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/index_ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <include layout="@layout/include_search_trastlate"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content">

                        <View
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/index_tv_weather_top"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/txt_18"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="15℃～26℃"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/index_tv_weather_content"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/txt_11"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="今日请转多云"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginTop="@dimen/margin_10"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <include layout="@layout/include_line_one"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="今日监测"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/gray_line"
                        android:layout_margin="6dp"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测仪器"/>
                        <TextView
                            android:id="@+id/index_tv_toaday"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:textSize="@dimen/txt_16"
                            android:textColor="@color/main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="122222"/>
                        <TextView
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 个"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障"/>
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/index_tv_max"
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="511"/>
                        <TextView
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/text_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个"/>
                    </LinearLayout>


                </LinearLayout>

                <com.android.daqsoft.androidbasics.view.sortbutton.SoreButton
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:id="@+id/soreButton"
                    android:background="#ffffff"
                    app:SoreRadioSelect="@drawable/radio_select"
                    app:SoreRadioUnselected="@drawable/radio_unselected"
                    app:SoreDistance="20"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <!--了解景区-->

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/index_ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/include_space_10"/>
                    <!--周边好玩-->
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/main"
                            android:text="重点监测"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--底部-->
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="170dp">
                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="150dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/index_bottom_1"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@drawable/home_nearby_spot_normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:textSize="11sp"
                                        android:textColor="@color/text_gray"
                                        android:text="维修"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/index_bottom_2"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@drawable/home_nearby_hotel_normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:textSize="11sp"
                                        android:textColor="@color/text_gray"
                                        android:text="仪器"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/index_bottom_3"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@drawable/home_nearby_food_normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:textSize="11sp"
                                        android:textColor="@color/text_gray"
                                        android:text="参数"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/index_bottom_4"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@drawable/home_nearby_shopping_normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:textSize="11sp"
                                        android:textColor="@color/text_gray"
                                        android:text="攻略"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/index_bottom_5"
                                    android:gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:src="@drawable/home_nearby_fun_normal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:textSize="11sp"
                                        android:textColor="@color/text_gray"
                                        android:text="方案"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_space_10"/>
                <LinearLayout
                    android:id="@+id/index_know_scenic"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/main"
                            android:text="仪器监测"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/index_scinic_all"
                                android:padding="4dp"
                                android:textColor="@color/main"
                                android:textSize="14sp"
                                android:layout_marginRight="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看全部"/>
                        </LinearLayout>
                        <ImageView
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/home_more_arrow_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <com.android.daqsoft.androidbasics.view.suppertext.SuperTextView
                        android:visibility="gone"
                        android:id="@+id/index_stv_more"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dp"
                        app:sShapeStrokeWidth="0.2dp"
                        app:sUseShape="true"
                        app:sRightIconRes="@drawable/home_more_arrow_normal"
                        app:sShapeCornersBottomRightRadius="50dp"
                        app:sShapeCornersBottomLeftRadius="50dp"
                        app:sShapeCornersTopLeftRadius="50dp"
                        app:sShapeCornersTopRightRadius="50dp"
                        app:sCenterTextString="更多不可错过的景点"
                        app:sCenterTextSize="14sp"
                        app:sCenterTextColor="@color/text"
                        app:sShapeStrokeColor="@color/gray_line"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <ViewAnimator
                    android:id="@+id/item_va"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/index_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <include layout="@layout/include_nodata"/>
                </ViewAnimator>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>



</LinearLayout>