<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/z_system_dialog_tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="提示"
        android:textColor="@color/main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/z_genxing_dialog_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <WebView
            android:id="@+id/z_system_dialog_tv_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>

    <include layout="@layout/include_line_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/z_system_dialog_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:padding="15dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <include layout="@layout/z_verticalline_30" />

        <Button
            android:id="@+id/z_system_dialog_btn_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:padding="15dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>