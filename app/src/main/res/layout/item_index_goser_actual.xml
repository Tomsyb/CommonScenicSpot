<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/margin_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/service_information_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="晴转多云"
                        android:textColor="@color/text"
                        android:textSize="@dimen/txt_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="10°"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_20"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="旅游指数"
                        android:textColor="@color/text"
                        android:textSize="@dimen/txt_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="5"
                        android:textColor="@color/main"
                        android:textSize="@dimen/txt_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:text="今天：星期四"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_12"/>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_actual_tv_more"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/main"
                    android:text="更多天气信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_13"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_more_arrow_normal"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_actual_tv_top"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/service_information_title"
            android:text="实时天气"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>