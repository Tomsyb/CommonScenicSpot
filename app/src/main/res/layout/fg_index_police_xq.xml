<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/include_title_main"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_margin="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/report_fill_head_pic"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_20"
                        android:textColor="@color/text"
                        android:text="事故上报"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="环湖风光游览区域"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/police_route"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="补充详情（选填）"
                    android:textSize="@dimen/txt_15"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="@dimen/txt_13"
                    android:text="0"
                    android:textColor="@color/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:textSize="@dimen/txt_13"
                    android:text="/"
                    android:textColor="@color/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:textSize="@dimen/txt_13"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="200"
                    android:textColor="@color/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/exception_et"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="补充详情可帮助更多的用户..."
                android:maxLength="200"
                android:padding="10dp"
                android:textColor="@color/text_gray"
                android:textColorHighlight="@color/text_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/police_rl_audio"
                    android:background="@drawable/bg_rec_gray"
                    android:gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:id="@+id/police_xq_img_audio"
                        android:src="@drawable/report_fill_icon_record_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_below="@+id/police_xq_img_audio"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/police_tv_audio"
                            android:textSize="@dimen/txt_13"
                            android:textColor="@color/text_gray"
                            android:text="语音"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_rec_gray"
                    android:gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:id="@+id/police_xq_img_video"
                        android:src="@drawable/report_fill_icon_camera_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_below="@+id/police_xq_img_video"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="@dimen/txt_13"
                            android:textColor="@color/text_gray"
                            android:text="视频"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/rl_picture"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_rec_gray"
                    android:gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:orientation="vertical">
                    <ImageView
                        android:padding="@dimen/margin_10"
                        android:id="@+id/police_xq_img_video2"
                        android:src="@drawable/report_fill_icon_camera_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:textSize="@dimen/txt_13"
                        android:textColor="@color/text_gray"
                        android:text="图片"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <com.android.daqsoft.androidbasics.view.MyGridView
                android:id="@+id/exception_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:columnWidth="70dp"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:paddingBottom="18dp"
                android:paddingLeft="10dp"
                android:paddingTop="18dp"
                android:scrollbars="none"
                android:verticalSpacing="3dp" />
            <include layout="@layout/include_line_one"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_pressed"
        android:visibility="gone" />
    <com.android.daqsoft.androidbasics.view.suppertext.SuperTextView
        android:id="@+id/fg_mine_qure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:sCenterTextColor="@color/white"
        app:sCenterTextString="立即上报"
        app:sShapeCornersRadius="2dp"
        app:sShapeSelectorNormalColor="@color/main"
        app:sShapeSelectorPressedColor="@color/gray"
        app:sUseShape="true" />

</LinearLayout>